{
   extends: [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
   ],
   parserOptions: {
      ecmaVersion: 6,
      sourceType: "module"
   },
   env: {
      es6: true,
      browser: true,
      node: true,
      jquery: true,
      mocha: true
   },
   rules: {
      quotes: [2, "single"],
      comma-dangle: [2, "always-multiline"],
      object-curly-spacing: [2, "always"],
      comma-spacing: ["error", { "before": false, "after": true }],
      no-console: 1,
      no-debugger: 1,
      no-var: 2,
      semi: [2, "always"],
      no-trailing-spaces: 1,
      eol-last: 0,
      no-unused-vars: 1,
      no-underscore-dangle: 0,
      no-alert: 0,
      no-lone-blocks: 0,
      jsx-quotes: 1
    }
}
